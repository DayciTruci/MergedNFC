<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mainPageMainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메인"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/mainPageUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:src="@drawable/baseline_account_circle_48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toEndOf="@id/mainPageMainTextView"
        app:layout_constraintTop_toTopOf="@id/mainPageMainTextView" />

    <TextView
        android:id="@+id/mainPageMedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/mainPageMainTextView"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mainPageEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/mainPageUserInfo"
        app:layout_constraintTop_toTopOf="@id/mainPageMedi"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainPageMediLayout"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/mainPageMedi"
        app:layout_constraintTop_toBottomOf="@id/mainPageMedi">

        <TextView
            android:id="@+id/mediText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/mediTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/mediText"
            app:layout_constraintStart_toEndOf="@id/mediText"/>
        <TextView
            android:id="@+id/mediTimeText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/mediText"
            app:layout_constraintStart_toEndOf="@id/mediTimeText"/>


    </androidx.constraintlayout.widget.ConstraintLayout>









    <TextView
        android:id="@+id/mainPageMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식사"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/mainPageMediLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mainPageMealEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/mainPageUserInfo"
        app:layout_constraintTop_toTopOf="@id/mainPageMeal"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainPageMealLayout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/mainPageMedi"
        app:layout_constraintTop_toBottomOf="@id/mainPageMeal">

        <TextView
            android:id="@+id/mealText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아침"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/mealText1Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/mealText1"
            app:layout_constraintStart_toEndOf="@id/mealText1"/>
        <TextView
            android:id="@+id/mealText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="점심"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/mealText1"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/mealText2Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/mealText2"
            app:layout_constraintStart_toEndOf="@id/mealText2"/>


        <TextView
            android:id="@+id/mealText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저녁"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/mealText2"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/mealText3Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/mealText3"
            app:layout_constraintStart_toEndOf="@id/mealText3"/>

    </androidx.constraintlayout.widget.ConstraintLayout>







    <TextView
        android:id="@+id/mainPageSports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/mainPageMealLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mainPageSportsEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/mainPageUserInfo"
        app:layout_constraintTop_toTopOf="@id/mainPageSports"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainPageSportsLayout"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@id/mainPageMedi"
        app:layout_constraintTop_toBottomOf="@id/mainPageSports">

        <TextView
            android:id="@+id/sportsText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="크레아틴"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:30"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/sportsText1"
            app:layout_constraintStart_toEndOf="@id/sportsText1"/>

        <TextView
            android:id="@+id/sportsText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로틴"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/sportsText1"
            app:layout_constraintStart_toStartOf="@id/sportsText1"
            app:layout_constraintEnd_toEndOf="@id/sportsText1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:30"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/sportsText2"
            app:layout_constraintStart_toEndOf="@id/sportsText1"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/newAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="새 항목 추가+"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/mainPageSportsLayout"
        app:layout_constraintTop_toBottomOf="@id/mainPageSportsLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>